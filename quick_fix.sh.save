    print "    return callback(null, true);"
    print "  },"
    print "  credentials: true,"
    print "  methods: ['\''GET'\'', '\''POST'\'', '\''PUT'\'', '\''DELETE'\'', '\''OPTIONS'\''],"
    print "  allowedHeaders: ['\''Content-Type'\'', '\''Authorization'\'', '\''X-Requested-With'\'']"
    print "}));"
    skip=1
