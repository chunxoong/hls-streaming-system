<div class="row">
    <div class="col-12">
        <h1>Welcome to HLS4U Stream</h1>
        <p class="lead">High-quality video streaming with HLS technology</p>
    </div>
</div>

<% if (videos && videos.length > 0) { %>
<div class="video-grid">
    <% videos.forEach(video => { %>
    <div class="video-card">
        <% if (video.thumbnail_path) { %>
        <img src="<%= video.thumbnail_path %>" class="video-thumbnail" alt="<%= video.title %>">
        <% } else { %>
        <div class="video-thumbnail d-flex align-items-center justify-content-center">
            <i class="fas fa-play-circle fa-3x text-muted"></i>
        </div>
        <% } %>
        <div class="p-3">
            <h5><%= video.title %></h5>
            <p class="text-muted small">
                <i class="fas fa-eye"></i> <%= video.views %> views
                <span class="ms-2">
                    <i class="fas fa-calendar"></i> 
                    <%= new Date(video.created_at).toLocaleDateString() %>
                </span>
            </p>
            <a href="/watch/<%= video.id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-play"></i> Watch
            </a>
        </div>
    </div>
    <% }); %>
</div>
<% } else { %>
<div class="text-center py-5">
    <i class="fas fa-video fa-3x text-muted mb-3"></i>
    <h3>No videos available</h3>
    <p class="text-muted">Videos will appear here once uploaded.</p>
</div>
<% } %>
